@page
@model AboutMe.Pages.Shared._SectionsModel
@{
    <section id="about" data-aos="fade-up">
        <div class="section-title">About Me</div>
        <div class="about-card">
            <p>Hello, I'm Trung – a backend developer specializing in .NET & ASP.NET. I love building robust web applications and learning new tech.</p>
        </div>
    </section>

    <section id="skills" data-aos="fade-up">
        <div class="section-title">Skills</div>
        <div class="skills-grid">
            <div class="skill-card"><i class="fab fa-csharp"></i><h4>C#</h4></div>
            <div class="skill-card"><i class="fas fa-database"></i><h4>SQL Server</h4></div>
            <div class="skill-card"><i class="fab fa-js-square"></i><h4>JavaScript</h4></div>
            <div class="skill-card"><i class="fab fa-html5"></i><h4>HTML/CSS</h4></div>
        </div>
    </section>

    <section id="projects" data-aos="fade-up">
        <div class="section-title">Projects</div>
        <div class="projects-grid">
            <div class="project-card">
                <img src="/images/project1.png" alt="Project 1">
                <div class="content">
                    <h3>Blog Web App</h3>
                    <p>ASP.NET Core + EF + JWT authentication</p>
                    <a href="https://github.com/PhamTrung1204/blogapp" class="btn" target="_blank">View Code</a>
                </div>
            </div>
        </div>
    </section>

    <section id="experience" data-aos="fade-up">
        <div class="section-title">Experience</div>
        <div class="experience-grid">
            <div class="experience-card">
                <h4>Backend Intern - FAST Software</h4>
                <p class="date">03/2025 – 06/2025</p>
                <p>Developed REST APIs using ASP.NET Core, worked with SQL Server and JWT authentication.</p>
            </div>
        </div>
    </section>

    <section id="education" data-aos="fade-up">
        <div class="section-title">Education</div>
        <div class="education-grid">
            <div class="education-card">
                <h4>UEH - College of Technology and Design</h4>
                <p class="date">2022 – 2026</p>
                <p>Bachelor of Software Engineering</p>
            </div>
        </div>
    </section>

    <section id="contact" data-aos="fade-up">
        <div class="section-title">Contact</div>
        <div class="contact-card">
            <form id="contact-form" class="contact-form">
                <input type="text" id="name" placeholder="Your Name" required />
                <input type="email" id="email" placeholder="Your Email" required />
                <textarea id="message" rows="4" placeholder="Your Message" required></textarea>
                <button type="submit">Send Message</button>
            </form>
        </div>
    </section>

}
